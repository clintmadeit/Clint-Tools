<?xml version="1.0" encoding="utf-8"?>
<installer-gui-script minSpecVersion="1">
    <title>Clint Tools DAW</title>
    <allowed-os-versions>
        <os-version min="10.10"/>
    </allowed-os-versions>
    <pkg-ref id="com.github.clinttoolsdaw.clinttools"/>
    <options 
        customize="never" 
        require-scripts="false" 
        hostArchitectures="x86_64,arm64"
    />
    <choices-outline>
        <line choice="default">
            <line choice="com.github.clinttoolsdaw.clinttools"/>
        </line>
    </choices-outline>
    <choice id="default"/>
    <choice id="com.github.clinttoolsdaw.clinttools" visible="false">
        <pkg-ref id="com.github.clinttoolsdaw.clinttools"/>
    </choice>
    <pkg-ref 
        id="com.github.clinttoolsdaw.clinttools"
        version="0" 
        onConclusion="none"
    >Distribution.pkg</pkg-ref>
</installer-gui-script>
